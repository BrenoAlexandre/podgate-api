{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/adapters/**/*Controller.ts"],
  "spec": {
    "name": "TSOA TUTORIAL",
    "outputDirectory": "src/routes",
    "specVersion": 3,
    "schemes": ["http", "https"],
    "host": "localhost:3001",
    "basePath": "/api/v1"
  },
  "swagger": {
    "outputDirectory": "./routes"
  },
  "routes": {
    "iocModule": "src/config/iocConfig.ts",
    "basePath": "/api/v1",
    "entryFile": "src/index.ts",
    "routesDir": "src/routes"
  },
  "ignore": ["**/node_modules/**"]
}
